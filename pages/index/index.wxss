/**index.wxss**/
page {
  background: rgb(246,246,246);
}
.wrapper {
  padding-left: .7rem;
  padding-right: .7rem;
  padding-top: .3rem;
  background: rgb(246,246,246);
  padding-bottom: 10rpx;
}
.add-even {
  display: flex;
  background: #fff;
  border-radius: 10rpx;
  height: 90rpx;
  align-items:center;
  padding-left:20rpx;
}
.add-even .plus {
  color: rgb(25,185,234);
  font-size: 1.5em;
  font-weight: bold;

}
.add-even input {
  line-height: 70rpx;
  margin-left: 15rpx;
}
.showbtn {
  height: 70rpx;
  font-size: .8rem;
  text-align: center;
  line-height: 70rpx;
  width: 40%;
  background: rgba(66, 64, 64, 0.25);
  margin: 0 auto;
  margin-top: 40rpx;
  margin-bottom: 30rpx;
  border-radius: 10rpx;
  color: #fff;
}
.even {
  padding-top: .3rem;
}
.list {
  border-radius: 10rpx;
  background: #fff;
  margin-top: .3rem;
  display: flex;
  height: 85rpx;
  line-height: 85rpx;
  align-items: center;
}
.list .statu {
  margin-left: 20rpx;
  width: 17px;
  height: 17px;
  border: 1rpx solid rgb(25,185,234);
  border-radius: 50%;
}
.list icon {
  width: 20px;
  height: 20px;
  margin-left: 20rpx;
}
.list .evenname {
  margin-left: 20rpx;
  width: 75%;
}
.wrapper .btn {
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  bottom: 60rpx;
  right: 25rpx;
  background: rgb(25,185,234); 
  text-align: center;
  line-height: 48px;
  border-radius: 50%;
  color: #fff;
  font-size: 1.8rem;
  font-weight: bold;
}